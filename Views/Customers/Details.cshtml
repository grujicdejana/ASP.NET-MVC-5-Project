@model VidlyProject.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>@Model.MembershipType.Name</li>
    @if (Model.Birthdate != null)
    {
        <li>@Model.Birthdate.Value.ToString("dd/MM/yyyy")</li>
    }
</ul>

